<Window x:Class="TraceBox.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TraceBox.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <StackPanel>
        <TextBox x:Name="TextBox" Height="200" AcceptsReturn="True"/>
        <TextBlock Text="{Binding MaxLines, ElementName=TextBox}" />
    </StackPanel>
</Window>
